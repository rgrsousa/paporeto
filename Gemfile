source 'https://rubygems.org'

gem 'rails', '4.0.0'

# database
gem 'sqlite3', '~> 1.3.7'

# slim (better html)
gem 'slim-rails', '~> 2.0.1'

# sass (better css)
gem 'sass-rails', '~> 4.0.0'

# coffeescript (better javascript)
gem 'coffee-rails', '~> 4.0.0'

# minify js (performance)
gem 'uglifier', '>= 1.3.0'

# jquery + rails compability
gem 'jquery-rails', '~> 3.0.4'

# ajax for faster pageloads (performance)
gem 'turbolinks', '~> 1.3.0'

# json
gem 'jbuilder', '~> 1.2'

# heroku
group :production do
  # heroku hacks
  gem 'rails_12factor'
  # database
  gem 'pg'
end
