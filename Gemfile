source 'https://rubygems.org'

gem 'rails', '4.0.0'

# slim (better html)
gem 'slim-rails', '~> 2.0.1'

# sass (better css)
gem 'sass-rails', '~> 4.0.0'

# coffeescript (better javascript)
gem 'coffee-rails', '~> 4.0.0'

# minify js (performance)
gem 'uglifier', '>= 1.3.0'

# jquery + rails compability
gem 'jquery-rails', '~> 3.0.4'

# ajax for faster pageloads (performance)
gem 'turbolinks', '~> 1.3.0'

# json
gem 'jbuilder', '~> 1.2'


gem 'bourbon', '~> 3.1.8'
gem 'neat', '~> 1.3.0'
gem 'high_voltage', '~> 1.2.3'
gem 'normalize-rails', '~> 2.1.1'

# better forms
gem 'simple_form', '~> 3.0.0.rc'

# heroku
group :production do
  # heroku hacks
  gem 'rails_12factor'
  # database
  gem 'pg'
end

# notebook
group :development do
  # database
  gem 'sqlite3', '~> 1.3.7'
end
